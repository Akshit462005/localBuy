<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart - LocalBuy</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <nav>
            <div class="logo">LocalBuy</div>
            <div class="nav-links">
                <a href="/user/dashboard">Dashboard</a>
                <a href="/user/orders">Orders</a>
                <a href="/auth/logout">Logout</a>
            </div>
        </nav>
    </header>

    <main class="cart-container">
        <h1>Your Cart</h1>
        <% if (cart.length === 0) { %>
            <div class="empty-cart">
                <p>Your cart is empty</p>
                <a href="/user/dashboard" class="btn primary">Continue Shopping</a>
            </div>
        <% } else { %>
            <div class="cart-items">
                <% cart.forEach(item => { %>
                    <div class="cart-item">
                        <h3><%= item.name %></h3>
                        <p class="price">₹<%= item.price %></p>
                        <form action="/user/update-cart" method="POST" class="quantity-form">
                            <input type="hidden" name="productId" value="<%= item.id %>">
                            <label for="quantity-<%= item.id %>">Quantity:</label>
                            <input type="number" id="quantity-<%= item.id %>" name="quantity" value="<%= item.quantity %>" min="0">
                            <button type="submit" class="btn secondary">Update</button>
                        </form>
                        <p class="subtotal">Subtotal: ₹<%= (item.price * item.quantity).toFixed(2) %></p>
                    </div>
                <% }) %>
            </div>
            <div class="cart-summary">
                <h3>Total: ₹<%= total.toFixed(2) %></h3>
                <form action="/user/checkout" method="POST">
                    <button type="submit" class="btn primary">Checkout</button>
                </form>
            </div>
        <% } %>
    </main>

    <footer>
        <p>&copy; 2025 LocalBuy. All rights reserved.</p>
    </footer>
</body>
</html>